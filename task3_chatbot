# Step 1: Import NLTK and download required data
import nltk
nltk.download('punkt')    # For splitting sentences into words
nltk.download('wordnet')  # For understanding word meanings

# Step 2: Import other required libraries
from nltk.stem import WordNetLemmatizer

# Initialize lemmatizer
lemmatizer = WordNetLemmatizer()

# Step 3: Predefined responses for the bot
responses = {
    "hi": "Hello! How can I help you?",
    "hello": "Hi there! How can I assist you?",
    "how are you": "I'm a bot, but I'm doing great! How about you?",
    "what is your name": "I am a simple Python chatbot.",
    "bye": "Goodbye! Have a nice day!"
}

# Step 4: Function to process user input and return a response
def chatbot_response(user_input):
    # Convert to lowercase and lemmatize words
    user_input = user_input.lower()
    user_input = ' '.join([lemmatizer.lemmatize(word) for word in nltk.word_tokenize(user_input)])
    
    # Check for matching keywords
    for key in responses:
        if key in user_input:
            return responses[key]
    
    return "Sorry, I don't understand that."

# Step 5: Chat loop
print("Chatbot is running! Type 'bye' to exit.")
while True:
    user_input = input("You: ")
    if user_input.lower() == "bye":
        print("Bot: Goodbye!")
        break
    print("Bot:", chatbot_response(user_input))

    
